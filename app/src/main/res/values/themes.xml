<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Notes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorPrimaryContainer">@color/colorSecondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorSecondaryContainer">@color/secondaryVariant</item>
        <item name="colorOnSecondaryContainer">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Error color. -->
        <item name="colorOnError">@color/colorSecondary</item>
        <item name="colorOnErrorContainer">@color/colorSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorPrimaryVariant</item>
        <item name="actionModeCloseDrawable">@drawable/baseline_close_24</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Custom.ActionMode</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="android:dialogTheme">@style/CustomDialogTheme</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="fontFamily">@font/archivo_medium</item>
    </style>

</resources>