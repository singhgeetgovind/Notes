<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">10dp</item>
    </style>
    <style name="Widget.App.ExtendedFloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.SmallComponent</item>
    </style>
    <style name="Custom.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/primaryVariant</item>
        <item name="titleTextColor">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
    </style>
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/Custom.ToolBar</item>
    </style>
    <style name="Custom.ToolBar" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnSurface">@color/primaryColor</item>
        <item name="colorPrimarySurface">@color/primaryColor</item>
        <item name="colorOnSecondary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="titleTextColor">@color/secondaryTextColor</item>
        <item name="iconTint">@color/primaryColor</item>
        <item name="navigationIconTint">@color/primaryColor</item>
    </style>
    <style name="CustomDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <!-- Customize the dialog appearance here -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
    </style>

    <style name="CustomDialogAnimation" parent="android:Animation">
        <!-- Customize the dialog animation here -->
        <item name="android:windowEnterAnimation">@anim/nav_default_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/nav_default_exit_anim</item>
    </style>
    <style name="Widget.Chip.Action" parent="Widget.MaterialComponents.Chip.Action">
        <item name="fontFamily">@font/archivo_semibold</item>
        <item name="chipIconTint">@color/primaryColor</item>
        <item name="closeIconTint">@color/primaryColor</item>
        <item name="android:textSize">12sp</item>
        <item name="closeIconSize">24sp</item>
    </style>
    <style name="Custom.SearchBar" parent="Widget.Material3.SearchBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnSurface">@color/primaryColor</item>
        <item name="colorPrimarySurface">@color/primaryColor</item>
        <item name="colorOnSecondary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="titleTextColor">@color/secondaryTextColor</item>
        <item name="iconTint">@color/primaryColor</item>
        <item name="navigationIconTint">@color/primaryColor</item>
    </style>
</resources>